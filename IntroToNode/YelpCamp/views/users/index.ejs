<% include ../layouts/header %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <table class="table table-striped table-bordered" id="userTable">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Username</th>
                                <!-- <th>Department</th>
                                <th>Title</th>
                                <th>Location</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.profile.given_name %></td>
                                    <td><%= user.profile.family_name %></td>
                                    <td><a href="/users/<%= user.id %>"><%= user.profile.email %></a></td>
                                    <!-- <td><%= user.profile.department %></td>
                                    <td><%= user.profile.title %></td>
                                    <td><%= user.profile.location %></td> -->
                                </tr>
                          <%  }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../layouts/footer %>