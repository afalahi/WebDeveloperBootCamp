<% include ../layouts/header %>

<div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
 
 
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title"><%= usr.profile.name %></h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class=" col-md-9 col-lg-9 "> 
                <table class="table table-user-information">
                  <tbody>
                    <tr>
                        <td>First Name:</td>
                        <td><%= usr.profile.given_name %></td>
                    </tr>
                    <tr>
                        <td>Last Name:</td>
                        <td><%= usr.profile.family_name %></td>
                    </tr>
                    <tr>
                      <td>Department:</td>
                      <td><%= usr.profile.department %></td>
                    </tr>
                    <tr>
                      <td>Hire date:</td>
                      <td>06/23/2013</td>
                    </tr>
                    <tr>
                      <td>Date of Birth</td>
                      <td><%= usr.profile.birthdate %></td>
                    </tr>
                    <tr>
                      <td>Gender</td>
                      <td><%= usr.profile.gender %> </td>
                    </tr>
                    <tr>
                      <td>Email</td>
                      <td><a href="mailto:<%= usr.profile.email %>"><%= usr.profile.email %></a></td>
                    </tr>
                    <tr>
                        <td>Group</td>
                        <td>
                            <ul style="display:inline-block;list-style-type: none;" >
                                <% groups.forEach(group => { %>
                                <li><%= group.profile.name %></li>
                                <% }) %>
                            </ul>
                        </td>
                    </tr>                      
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <div class="panel-footer">
                <!-- <a data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-xs btn-primary"><i class="glyphicon glyphicon-envelope"></i></a> -->
                <!-- <span class="pull-right"> -->
                    <a href="/users/<%= usr.id %>/edit" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-xs btn-warning">Edit</a>
                    <form style="display:inline" action="/users/<%= usr.id %>/?_method=delete" method="POST">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                <!-- </span> -->
            </div>
        </div>
      </div>
    </div>
  </div>

<% include ../layouts/footer %>