<% include layouts/header %>
            <div class="row"><% campgrounds.forEach(function(campground){ %>
                <div class="col-md-4 col-sm-6">
                    <div class="thumbnail">
                        <img src = "<%= campground.image %>" alt="<%= campground.name %>">
                        <div class="caption text-center">
                            <h4> <%= campground.name %> </h4>
                        </div>
                        <p class="text-center">
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View More</a>
                        </p>
                    </div>
                </div><% }) %>
            </div>
<% include layouts/footer %>