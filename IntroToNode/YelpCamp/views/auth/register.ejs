<% include ../layouts/header %>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <form class="form" action="/auth/register" method="POST">
                        <div class="form-group">
                            <label for="givenName">First Name</label>
                            <input type="text" class="form-control" name="givenName" placeholder="Jane">
                        </div>
                        <div class="form-group">
                            <label for="sn">Last Name</label>
                            <input type="text" name="sn" placeholder="Doe" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="username">User Name</label>
                            <input type="text" class="form-control" name="username" placeholder="User Name">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Your Password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
                        </div>
                    </form>
                </div>
            </div>

<% include ../layouts/footer %>