<% include ../layouts/header %>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <form class="form" action="/auth/register" method="POST">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <input type="text" class="form-control" name="firstName" placeholder="Jane" required value="<%= body.firstName %>"/>
                            <label class="error"><%= errors.firstName %></label>
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <input type="text" name="lastName" placeholder="Doe" class="form-control" required value="<%= body.lastName %>" />
                            <label class="error"><%= errors.lasttName %></label>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" placeholder="jane@example.com" required value="<%= body.email %>" />
                            <label class="error"><%= errors.email %></label>
                            <label class="error"><%= errors.login %></label>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" placeholder="*********" required value="<% body.password %>" />
                            <label class="error"><%= errors.password %></label>
                        </div>
                        <div class="form-group">
                            <button id="register" type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
                        </div>
                    </form>
                </div>
            </div>
<% include ../layouts/footer %>