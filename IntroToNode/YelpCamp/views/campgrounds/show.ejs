<% include ../layouts/header %>
            <div class="row">
                <div class="col-md-12">
                    <h1><%=campground.name%></h1>
                    <img class="img-rounded img-responsive" src="<%=campground.image%>" alt="<%=campground.name%>">
                    <div>
                        <h4><%=campground.description%></h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8">
                    <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-lg btn-default">Add new comment</a>
                    <% campground.comments.forEach(function(comment){ %>
                        <p><strong><%=comment.author%></strong> - <%= comment.text %></p>
                   <% }) %>
                </div>
            </div>
<% include ../layouts/footer %>