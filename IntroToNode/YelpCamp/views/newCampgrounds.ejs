<% include layouts/header %>
    <div class="container">
        <h1>New Campgrounds</h1>
        <div class="row">
            <div class="col-md-12">
                <form class="form-inline" action="/campgrounds" method="post" encType="multipart/form-data">
                    <div class="form-group">
                        <label for="camp-name">Name</label>
                        <input type="text" class="form-control" id="camp-name" placeholder="Camp Name" name="camp-name">
                    </div>
                    <div class="form-group">
                        <label for="camp-image">Image</label>
                        <input type="file" class="form-control" id="camp-image" placeholder="Upload Image" name="camp-image">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
<% include layouts/footer %>